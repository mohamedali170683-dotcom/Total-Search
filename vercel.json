{
  "version": 2,
  "buildCommand": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null || true",
  "redirects": [
    {
      "source": "/",
      "destination": "/home",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/main.py"
    },
    {
      "source": "/home",
      "destination": "/api/main.py"
    },
    {
      "source": "/brand",
      "destination": "/api/main.py"
    },
    {
      "source": "/debug",
      "destination": "/api/main.py"
    },
    {
      "source": "/test-template",
      "destination": "/api/main.py"
    },
    {
      "source": "/test-simple-dashboard",
      "destination": "/api/main.py"
    }
  ],
  "functions": {
    "api/main.py": {
      "runtime": "@vercel/python@4.5.1",
      "maxDuration": 60
    }
  }
}
